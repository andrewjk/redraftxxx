{
  "name": "redraftxxx",
  "version": "0.0.1",
  "description": "A Redraft template site for deploying to a Cloudflare account",
  "type": "module",
  "private": "true",
  "scripts": {
    "dev": "tb --dev",
    "build": "tb --build",
    "preview": "tb --preview",
    "check": "tsc --noEmit",
    "db:list": "wrangler d1 migrations list DB --remote",
    "db:push": "wrangler d1 migrations apply DB --remote",
    "deploy": "npm run db:push && wrangler deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@redraft/adapter-cloudflare": "^0.1.6",
    "@redraft/site": "^0.3.1",
    "@torpor/adapter-cloudflare": "^0.2.3",
    "@torpor/build": "^0.4.14",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "wrangler": "^4.54.0"
  },
  "cloudflare": {
    "bindings": {
      "USERNAME": {
        "description": "Initial setup username."
      },
      "PASSWORD": {
        "description": "Initial setup password."
      },
      "SITE_LOCATION": {
        "description": "Your site's URL, e.g. `https://[PROJECT].[ACCOUNT].workers.dev/`."
      },
      "JWT_SECRET": {
        "description": "Set a unique key for encrypting your user token when logged in."
      },
      "JWT_SECRET_2": {
        "description": "Set a unique key for encrypting the user tokens you share with contacts."
      }
    }
  }
}